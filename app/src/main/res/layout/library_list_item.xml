<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/library_book_image"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginRight="6dip"

                android:src="@drawable/book" />
        <TextView
                android:id="@+id/library_book_title"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Book Title"
                android:layout_toRightOf="@+id/library_book_image"
                android:textColor="#000000"
                android:textStyle="bold"
                />
        <Space android:id="@+id/space" android:layout_width="match_parent" android:layout_height="30dp" android:layout_below="@+id/library_book_title" android:layout_toRightOf="@+id/library_book_image"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/space"
                      android:orientation="horizontal"
                      android:layout_toRightOf="@+id/library_book_image"

                      android:weightSum="2"
                >
            <TextView
                    android:id="@+id/library_src_language"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="English"
                    android:textColor="#000000"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/library_swych_language"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="French"
                    android:textColor="#000000"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>