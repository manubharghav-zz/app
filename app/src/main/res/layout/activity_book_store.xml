    <LinearLayout
            android:id="@+id/filters"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:paddingLeft="3dp"
                      android:paddingRight="3dp"
                      android:background="@android:color/darker_gray"
                >
            <Spinner
                    android:id="@+id/src_language_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/languages"
                    android:layout_gravity="center_vertical"
                    >
            </Spinner>

            <Spinner
                    android:id="@+id/swych_language_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/languages"
                    android:layout_gravity="center_vertical"
                    >
            </Spinner>
            <Switch android:id="@+id/mode_button"
                    android:layout_width="50dp" android:layout_height="wrap_content"
                    android:textOn="@string/Mode1short"
                    android:textOff="@string/Mode2short"
                    android:showText="true"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    />
            <CheckBox
                    android:id="@+id/chkMode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Mode1" />
            <CheckBox
                    android:id="@+id/chkMode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Mode2" />

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Filter"
                    android:onClick="filterBooks"
                    android:visibility="gone"
                    />

        </LinearLayout>
    </LinearLayout>
    <ListView
            android:id="@+id/book_store_books"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/filters"
            >

    </ListView>
</RelativeLayout>
